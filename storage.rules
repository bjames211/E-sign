rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024 // 10MB max
        && request.resource.contentType == 'application/pdf';
    }

    // Order files - PDFs, images, and documents
    match /orders/{orderNumber}/{category}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 25 * 1024 * 1024; // 25MB max
    }

    // Change order files - PDFs, images, and documents
    match /change_orders/{changeOrderNumber}/{category}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 25 * 1024 * 1024; // 25MB max
    }
  }
}
